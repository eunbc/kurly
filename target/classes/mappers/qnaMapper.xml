<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.cjs200809.dao.QnaDao">

	<insert id="writeQna">
		insert into qna values (default,#{vo.gIDX},#{vo.qNAME},#{vo.qTITLE},#{vo.qCONTENT},#{vo.qSECRET},default,default,default,default,#{vo.qLEVELORDER});
	</insert>
	
	<insert id="writeQnaReply">
		insert into qna values (default,#{vo.gIDX},#{vo.qNAME},#{vo.qTITLE},#{vo.qCONTENT},'N',default,default,'답변글',1,#{vo.qLEVELORDER});
	</insert>
	
	<update id="updateReplyStmt">
		update qna set qREPLY='답변완료' where qIDX=#{qIDX};
	</update>
	
	<select id="viewQna" resultType="com.spring.cjs200809.vo.QnaVo">
		select * from qna where qIDX=#{qIDX};
	</select>
	
	<select id="maxLevelOrder" resultType="String">
		select max(qLEVELORDER) from qna where gIDX=#{gIDX};
	</select>
	
	<update id="levelOrderPlusUpdate">
		update qna set qLEVELORDER=qLEVELORDER+1 where gIDX=#{vo.gIDX} and qLEVELORDER>#{vo.qLEVELORDER};
	</update>
	
	<update id="qnaPrivateByAdmin">
		update qna set qPUBLIC='N' where qIDX=#{qIDX};
	</update>
	
</mapper>